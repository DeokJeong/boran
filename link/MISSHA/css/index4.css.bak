section div.paging{width:396px; height:44px; margin:0 auto;}
section div.paging li{width:46px; height:46px; float:left; margin-right:10px;background-repeat:no-repeat; background-position:center; text-align:center; line-height:46px;}
section div.paging li a.on{border-bottom:2px solid #000;}
section div.paging li:nth-child(1){background-image:url(../images/btn_first.png); text-indent:-9999px}
section div.paging li:nth-child(2){background-image:url(../images/btn_prev.png); text-indent:-9999px}
section div.paging li:nth-child(3){}
section div.paging li:nth-child(4){}
section div.paging li:nth-child(5){}
section div.paging li:nth-child(6){background-image:url(../images/btn_next.png); text-indent:-9999px}
section div.paging li:nth-child(7){background-image:url(../images/btn_last.png); text-indent:-9999px}


/* 푸터영역 */
div#footerArea{height:410px; background-color:#000; font-size:14px;}
div#footerArea footer{width:1300px; height:210px; margin:100px auto; position:relative; top:100px; color:#676767;}
div#footerArea footer a{color:#676767;}

/* h1 & adressArea */
div#footerArea footer h1{width:158px; height:41px; background:url(../images/footer_logo.png) no-repeat; float:left; margin-right:70px; text-indent:-9999px;}

div#footerArea footer div.adressArea{float:left; line-height:24px;}
div#footerArea footer div.adressArea > p:nth-child(1){margin-bottom:80px;}
div#footerArea footer div.adressArea > p:nth-child(1) a{padding-right:45px; font-weight:bold;}
div#footerArea footer div.adressArea > p:nth-child(1) a:hover{color:#fff;}
div#footerArea footer div.adressArea address{font-style:normal; color:#fff; font-weight:bold; margin-bottom:30px;}
div#footerArea footer div.adressArea address span{display:block; padding:0 20px 0 0;  float:left;}
div#footerArea footer div.adressArea address p span:nth-child(1):after{content:""; display:inline-block; width:1px; height:10px; background-color:#fff; margin-left:20px;}
div#footerArea footer div.adressArea p small{float:left; margin:24px 0 0 ;}

/* social */
div#footerArea footer div.social{width:245px; height:210px; float:right; }
div#footerArea footer div.social ul{height:32px; margin-bottom:110px; }
div#footerArea footer div.social ul li{height:45px; float:left; font-size:0; text-indent: -9999px;}
div#footerArea footer div.social li:nth-child(1){width:50px; background:url(../images/icon_youtube.png) left center no-repeat; text-indent:-9999px;}
div#footerArea footer div.social li:nth-child(2){width:55px; background:url(../images/icon_instargram.png) center center no-repeat; text-indent:-9999px;}
div#footerArea footer div.social li:nth-child(3){margin-right:0; width:30px; background:url(../images/icon_facebook.png) right center no-repeat; text-indent:-9999px;}
div#footerArea footer div.social div.familySite{height:46px; border:1px solid #7a7a7a; line-height:46px; text-indent:24px; background:url(../images/arrow_family_site.png) no-repeat right center; }