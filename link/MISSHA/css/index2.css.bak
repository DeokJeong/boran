@charset "UTF-8";

/* 초기화 */
body,div,header,ul,li,article,section,footer,h1,h2,h3,hr,dt,dd,dl{margin:0;padding:0;}
hr{border:none;}
.hidden{display:none;}
ul,li{list-style:none; }
a{text-decoration:none; color:dimgray;}

/* 해더영역 */
header{width:1300px; height:135px; margin:0 auto; text-transform:uppercase;}
header div.titleArea{height:30px; padding:21px 0; }
header .utilmenu{width:121px;height:30px; float:left; margin-right:464px; text-indent:-9999px;}
header .utilmenu ul{}
header .utilmenu li{width:25px; height:30px; float:left; margin-right:23px; background-repeat:no-repeat; background-position:center;}
div.utilmenu li:nth-child(1) span{display:block; height:2px; background-color:dimgray; margin:0 0 10px 0;}
div.utilmenu li:nth-child(1) span:nth-child(1){margin-top:3px;}
div.utilmenu li:nth-child(2){background-image:url(../images/icon_location.png)}
div.utilmenu li:last-child{margin-right:0; background-image:url(../images/icon_search.png); background-size:100%;}

/* 로고 */
header div.titleArea h1{width:142px; height:30px; text-indent:-9999px; float:left; background:url(../images/logo.png) no-repeat; }

/* 언어 */
header div.titleArea div.lang{width:120px; height:30px; float:right;}
header div.titleArea div.lang li{width:60px; height:30px; float:left; text-align:center; line-height:30px; box-sizing:border-box;}
header div.titleArea div.lang li a{color:#ccc}
header div.titleArea div.lang li.on {border-radius:15px; border:1px solid #ccc;}
header div.titleArea div.lang li.on a {color:#000; font-weight:bold;}

/* hr */
header div.titleArea + hr{height:1px; background-color:#eee;}
header + hr{height:1px; background-color:#eee; margin-bottom:80px;}

/* nav */
header nav{height:60px; line-height:60px;}
header nav li{float:left; padding:0 56px; }
header nav li a.on{font-weight:bold; border-bottom:2px solid #000; padding-bottom:18px;}

div#contents{width:1300px;margin:0 auto;}
/* 비주얼영역 */
article{height:400px; background:url(../images/img.jpg) no-repeat top center; background-size:cover; margin-bottom:64px;}

/* 컨텐츠영역 */
section {overflow:hidden;}
section div.filter{height:94px; background-color:#ccc; margin-bottom:80px;}
section div.product{margin-bottom:120px; overflow:hidden;}
section div.product li{width:25%; height:330px; margin-bottom:120px; float:left; }
section div.product li dt{text-indent:-9999px; height:300px; background-repeat:no-repeat; background-position:top center; background-size:70%;}
section div.product li dd{width:80% line-height:20px; font-size:12px; text-align:center; margin:0 auto;}

